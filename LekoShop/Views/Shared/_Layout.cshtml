    <!-- Header-->
    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">LEKO SCHOP</h1>
                <p class="lead fw-normal text-white-50 mb-0">Special Prices for you</p>
            </div>
        </div>
    </header>
    <!-- Section-->
   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Footer-->
    <footer class=" py-2 bg-dark border-top footer text-muted">
        <div class="container">
            &copy; 2023 - LekoShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
