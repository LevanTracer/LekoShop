@model Category

<form method="post">
	<div class="border p-3 mt-auto">
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
    </div>
	<button type="submit" class="btn btn-primary">ADD</button>
</form>

