@model Product


<h1>Create Product</h1>

<form method="post">
	<div class="border p-3 mt-auto">
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Price"></label>
			<input asp-for="Price" class="form-control" />
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Description"></label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>			
		<div class="mb-3">
			<label asp-for="AvailableQuantity"></label>
			<input asp-for="AvailableQuantity" class="form-control" />
			<span asp-validation-for="AvailableQuantity" class="text-danger"></span>
		</div>		
		

		<div class="form-group">
			<label asp-for="Category" class="form-label mt-4">Select Category</label>
			<select asp-for="Category" class="form-select">
				@foreach (var item in ViewBag.SelectCategory as List<Category>)
				{
					<option>@Html.DisplayFor(Name=>item.Name)</option>
				}				
			</select>
			<span asp-validation-for="Category" class="text-danger"></span>
		</div>
		<br />

		<button type="submit" class="btn btn-primary">Add</button>
		<a asp-controller="Product" asp-action="ProductList" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
		
	</div>		
	
</form>
