@using LekoShop.ViewModels;
@model CreateProductViewModel


<h1>Add Product</h1>

<div class="py-5">
	<form method="post" enctype="multipart/form-data">
		<div class="border p-3 mt-auto">
			<div class="mb-3">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Price"></label>
				<input asp-for="Price" class="form-control" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Description"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="AvailableQuantity">Quantity</label>
				<input asp-for="AvailableQuantity" class="form-control" />
				<span asp-validation-for="AvailableQuantity" class="text-danger"></span>
			</div>


			<div class="form-group">
				<label asp-for="CategoryId" class="form-label mt-4">Select Category</label>
				<select asp-items="@Model.SelectCategory" asp-for="CategoryId" class="form-select">
					<option>--Select a Category--</option>
				</select>
				<span asp-validation-for="CategoryId" class="text-danger"></span>
			</div>
			<br />
			<div class="form-group">
				<input asp-for="File" class="form-control form-control-lg" type="file" placeholder="File" />
				<span asp-validation-for="File" class="text-danger"></span>
			</div>


			<br />

			<button type="submit" class="btn btn-primary">Add</button>
			<a asp-controller="Product" asp-action="ProductList" class="btn btn-secondary" style="width:150px">
				Back to List
			</a>

		</div>

	</form>
	<br />
</div>


