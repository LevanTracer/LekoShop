@model List<Product>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ProductList</h1>

<a asp-controller="Product" asp-action="CreateProduct"  class="btn btn-success">Add Product</a>


<div class="py-5">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Description</th>
                <th scope="col">Available Quantity</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr class="table-success">
                    <td>@item.Id</td>
                    <td>@item.Image</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Description</td>
                    <td>@item.AvailableQuantity</td>
                    <td>
                        <a asp-action="EditProduct" class="btn btn-outline-primary" asp-route-id="@item.Id">EDIT</a>
                        
                    </td>
                    <td><form method="post">
                            <button asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-primary">Delete</button> 
                            </form></td>
                </tr>
            }

        </tbody>
    </table>
    <br />
</div>


